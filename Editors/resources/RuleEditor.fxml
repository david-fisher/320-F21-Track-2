<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="458.0" prefWidth="618.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="editors.rule_editor_ui.controllers.RuleEditorUIController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" styleClass="bottom" stylesheets="@../RuleEditorUI/src/style.css" BorderPane.alignment="CENTER">
        <buttons>
          <Button mnemonicParsing="false" onAction="#handleBackButton" styleClass="back" stylesheets="@../RuleEditorUI/src/style.css" text="Back" textFill="#878787">
               <font>
                  <Font name="Cambria Bold" size="16.0" />
               </font></Button>
        </buttons>
      </ButtonBar>
   </bottom>
   <left>
      <VBox alignment="TOP_CENTER" prefHeight="398.0" prefWidth="140.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Controls" textFill="#878787">
               <font>
                  <Font name="Cambria Bold" size="19.0" />
               </font>
            </Label>
            <Button fx:id="addPsetBtn" mnemonicParsing="false" onAction="#handleAddPsetBtn" prefHeight="25.0" prefWidth="92.0" styleClass="label" stylesheets="@../RuleEditorUI/src/style.css" text="Add pset" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
            <Button fx:id="addRsetBtn" mnemonicParsing="false" onAction="#handleAddRsetBtn" prefHeight="25.0" prefWidth="92.0" styleClass="label" stylesheets="@../RuleEditorUI/src/style.css" text="Add rset" textFill="WHITE" />
            <Button fx:id="addNotBtn" mnemonicParsing="false" onAction="#handleAddNotBtn" prefHeight="25.0" prefWidth="92.0" styleClass="label" stylesheets="@../RuleEditorUI/src/style.css" text="Add not" />
            <Button fx:id="addBinOpBtn" mnemonicParsing="false" onAction="#handleAddBinOpBtn" prefHeight="25.0" prefWidth="92.0" styleClass="label" stylesheets="@../RuleEditorUI/src/style.css" text="Add bin op" />
            <Button fx:id="addGetTileIndexBtn" alignment="CENTER" mnemonicParsing="false" onAction="#handleAddGetTileIndexBtn" prefHeight="25.0" prefWidth="92.0" styleClass="label" stylesheets="@../RuleEditorUI/src/style.css" text="Add get tile[i]" />
            <Button fx:id="addGetBtn" mnemonicParsing="false" onAction="#handleAddGetBtn" prefHeight="25.0" prefWidth="92.0" styleClass="label" stylesheets="@../RuleEditorUI/src/style.css" text="Add get" />
            <Button fx:id="addGetTileConnBtn" mnemonicParsing="false" onAction="#handleAddGetTileConnBtn" prefHeight="25.0" prefWidth="92.0" styleClass="label" stylesheets="@../RuleEditorUI/src/style.css" text="Add get connection" />
            <Button fx:id="addCondition" mnemonicParsing="false" onAction="#handleAddCondition" prefHeight="25.0" prefWidth="92.0" styleClass="label" stylesheets="@../RuleEditorUI/src/style.css" text="Add Condition" />
         </children>
         <cursor>
            <Cursor fx:constant="SW_RESIZE" />
         </cursor>
      </VBox>
   </left>
   <center>
      <ScrollPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <content>
            <AnchorPane fx:id="editorPane" prefHeight="404.0" prefWidth="474.0" stylesheets="@../RuleEditorUI/src/style.css" />
         </content>
      </ScrollPane>
   </center>
</BorderPane>
